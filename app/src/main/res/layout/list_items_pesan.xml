<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Harga Produk"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namaProduk" />

        <TextView
            android:id="@+id/jumlahProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jumalah Produk"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hargaProduk" />

        <TextView
            android:id="@+id/tvKetCus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Customer   : "
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jumlahProduk" />

        <TextView
            android:id="@+id/tvCus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="User"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvKetCus"
            app:layout_constraintTop_toBottomOf="@id/jumlahProduk" />

        <TextView
            android:id="@+id/tVKetNoMeja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nomor Meja : "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvKetCus" />

        <TextView
            android:id="@+id/tvNoMeja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/tVKetNoMeja"
            app:layout_constraintTop_toBottomOf="@+id/tvCus" />

        <TextView
            android:id="@+id/tVKetKasir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="Kasir : "
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/constList"
            app:layout_constraintEnd_toStartOf="@+id/tvKasir"/>

        <TextView
            android:id="@+id/tvKasir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aku"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="@+id/constList"
            app:layout_constraintTop_toTopOf="@+id/constList"/>

        <ImageView
            android:id="@+id/editRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/edit_icon"
            app:layout_constraintEnd_toEndOf="@+id/constList"
            app:layout_constraintBottom_toBottomOf="@+id/constList"/>

        <ImageView
            android:id="@+id/deleteRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/delete_icon"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/editRecord"
            app:layout_constraintBottom_toBottomOf="@+id/constList"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>